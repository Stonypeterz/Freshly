@model ResetPasswordModel
@{
    ViewBag.Title = "Reset password";
}
<div class="board cover">
    <div class="container">
        <h2>@ViewBag.Title</h2>
        <hr />
        <form id="frmResetPassword" asp-controller="Account" asp-action="ResetPassword" method="post">
            @((ViewBag.Msg == null) ? "" : Html.Raw(ViewBag.Msg))
            <input type="hidden" name="Code" value="@Model.Code" />
            <div class="form-group">
                <input type="password" name="Password" value="@Model.Password" class="form-control" placeholder="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="password" name="ConfirmPassword" value="@Model.ConfirmPassword" class="form-control" placeholder="Confirm Password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Update Password</button>
            </div>
        </form>
    </div>
</div>
@{
    ViewBag.Title = "You forgot your password";
}
<div class="board cover">
    <div class="container">
        <div class="minibox">
            <h2>Forgot password</h2>
            <hr />
            <p>Recovering your lost password is not hard. All we need is your account Id or registered email address. We'll send a reset-password-link to your registered email address.</p>
            <form asp-controller="Account" asp-action="ForgotPassword" method="post" class="form-horizontal">
                <div class="form-group">
                    <div class="col-lg-12">
                        <input type="text" name="UserId" autofocus autocomplete="off" class="form-control" value="" placeholder="User Id or Email Address" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-12">
                        <button type="submit" class="btn btn-block btn-primary">Send me a link</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
@model ChangePasswordModel
@{
    ViewBag.Title = "Change your password";
}
<div class="board cover">
    <div class="container">
        <h2>@ViewBag.Title</h2>
        <hr />
        <form id="frmChangePassword" asp-controller="Account" asp-action="ChangePassword" method="post">
            @((ViewBag.Msg == null) ? "" : Html.Raw(ViewBag.Msg))
            <div class="form-group">
                <input type="password" name="OldPassword" value="@Model.OldPassword" class="form-control" placeholder="Old Password" />
                <span asp-validation-for="OldPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="password" name="NewPassword" value="@Model.NewPassword" class="form-control" placeholder="New Password" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="password" name="ConfirmPassword" value="@Model.ConfirmPassword" class="form-control" placeholder="Confirm Password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Update Password</button>
            </div>

        </form>
    </div>
</div>

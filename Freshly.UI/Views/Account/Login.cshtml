@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<div class="board cover">
    <div class="container">
        <div class="minibox">
            <img src="~/images/MaleAvatar.png" class="img-circle img-responsive" alt="Avatar" />
            <form action="~/account/login" method="post">
                @((ViewBag.Msg == null) ? "" : Html.Raw(ViewBag.Msg))
                <input type="hidden" name="ReturnUrl" value="@Model.ReturnUrl" />
                <div class="form-group">
                    <input type="tel" name="UserId" class="form-control" placeholder="User Id or Email" />
                    <span asp-validation-for="UserId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="password" name="Password" class="form-control" placeholder="Password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label for="RememberMe">
                            <input type="checkbox" id="RememberMe" name="RememberMe" value="true" />
                            Remember me
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-block btn-primary">Log in</button>
                </div>
            </form>
            <div class="linkers">
                <a href="~/account/signup" class="getr">Register here</a>
                <a href="~/account/forgotpassword" class="getr">Recover password</a>
            </div>

        </div>
    </div>
</div>